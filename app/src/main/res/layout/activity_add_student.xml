<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/view_stu"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">







                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="55.0dip"
                    android:paddingLeft="22.0dip"
                    android:paddingRight="22.0dip">

                    <TextView
                        android:id="@+id/stu_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:fontFamily="sans-serif-medium"
                        android:text="姓名"
                        android:textColor="#ff888888"
                        android:textSize="14.0sp" />

                    <EditText
                        android:id="@+id/edit_stu_name"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_toRightOf="@id/stu_name"
                        android:background="@null"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center|right"
                        android:hint="请输入姓名"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:paddingLeft="20.0dip"
                        android:paddingRight="20.0dip"
                        android:singleLine="true"
                        android:textColor="#ff202020"
                        android:textColorHint="#ffc0c4cc"
                        android:textSize="14.0sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="55.0dip"
                    android:paddingLeft="22.0dip"
                    android:paddingRight="22.0dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:fontFamily="sans-serif-medium"
                        android:text="联系电话"
                        android:textColor="#ff888888"
                        android:textSize="14.0sp" />

                    <EditText
                        android:id="@+id/edit_stu_phone"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerHorizontal="true"
                        android:background="@null"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center|right"
                        android:hint="请输入联系电话"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:paddingLeft="20.0dip"
                        android:paddingRight="20.0dip"
                        android:singleLine="true"
                        android:textColor="#ff202020"
                        android:textColorHint="#ffc0c4cc"
                        android:textSize="14.0sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/choice_gender"
                    android:layout_width="fill_parent"
                    android:layout_height="55.0dip"
                    android:paddingLeft="22.0dip"
                    android:paddingRight="22.0dip">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/boy"
                            android:layout_width="50.0dip"
                            android:layout_height="28.0dip"
                            android:background="@drawable/bg_btn"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:text="男"
                            android:textColor="#ffffffff"
                            android:textSize="12.0sp" />

                        <TextView
                            android:id="@+id/girl"
                            android:layout_width="50.0dip"
                            android:layout_height="28.0dip"
                            android:layout_marginLeft="8.0dip"
                            android:background="@drawable/bg_btn_nocheck"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:text="女"
                            android:textColor="#ffffffff"
                            android:textSize="12.0sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="24.0dip"
                        android:layout_toRightOf="@id/gender"
                        android:fontFamily="sans-serif-medium"
                        android:text="男"
                        android:textColor="#ffc0c4cc"
                        android:textSize="14.0sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:fontFamily="sans-serif-medium"
                        android:text="性别"
                        android:textColor="#ff888888"
                        android:textSize="14.0sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/choice_birthday"
                    android:layout_width="fill_parent"
                    android:layout_height="55.0dip"
                    android:paddingLeft="22.0dip"
                    android:paddingRight="22.0dip">

                    <ImageView
                        android:id="@+id/birthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/icon_arrow" />

                    <TextView
                        android:id="@+id/text_birthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="24.0dip"
                        android:layout_toLeftOf="@id/birthday"
                        android:fontFamily="sans-serif-medium"
                        android:text="请选择出生年月日"
                        android:textColor="#ffc0c4cc"
                        android:textSize="14.0sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:fontFamily="sans-serif-medium"
                        android:text="生日"
                        android:textColor="#ff888888"
                        android:textSize="14.0sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/choice_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="22.0dip"
                    android:paddingRight="22.0dip">

                    <ImageView
                        android:id="@+id/img_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/icon_edit" />

                    <TextView
                        android:id="@+id/text_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="24.0dip"
                        android:layout_marginTop="23.0dip"
                        android:layout_marginBottom="23.0dip"
                        android:layout_toRightOf="@id/label"
                        android:fontFamily="sans-serif-medium"
                        android:text="添加标签便于分组"
                        android:textColor="#ffc0c4cc"
                        android:textSize="14.0sp" />

                    <TextView
                        android:id="@+id/label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:fontFamily="sans-serif-medium"
                        android:text="标签"
                        android:textColor="#ff888888"
                        android:textSize="14.0sp" />

                    <RecyclerView
                        android:id="@id/recycler"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24.0dip"
                        android:layout_marginTop="18.0dip"
                        android:layout_marginRight="10.0dip"
                        android:layout_marginBottom="23.0dip"
                        android:layout_toLeftOf="@id/img_edit"
                        android:layout_toRightOf="@id/label"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        android:visibility="gone" />
                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1.0dip"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginRight="15.0dip"
                    android:background="#fff2f2f2" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1.0dip"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginRight="15.0dip"
                    android:background="#fff2f2f2" />

                <View
                    android:id="@+id/view_line2"
                    android:layout_width="wrap_content"
                    android:layout_height="1.0dip"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginRight="15.0dip"
                    android:background="#fff2f2f2"
                    android:visibility="gone" />

                <View
                    android:id="@+id/view_line3"
                    android:layout_width="wrap_content"
                    android:layout_height="1.0dip"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginRight="15.0dip"
                    android:background="#fff2f2f2"
                    android:visibility="gone" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1.0dip"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginRight="15.0dip"
                    android:background="#fff2f2f2" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1.0dip"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginRight="15.0dip"
                    android:background="#fff2f2f2" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:background="#fff2f2f2" />

            <TextView
                android:id="@+id/btn_save"
                android:layout_width="fill_parent"
                android:layout_height="48.0dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="60.0dip"
                android:layout_marginTop="30.0dip"
                android:layout_marginRight="60.0dip"
                android:layout_marginBottom="40.0dip"
                android:background="@drawable/bg_btn"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="保存并上传人脸信息"
                android:textColor="#ffffffff"
                android:textSize="16.0sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>